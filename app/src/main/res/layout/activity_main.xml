<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/AddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="148dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="393dp"
        android:text="Add" />

    <Button
        android:id="@+id/RunButton"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="48dp"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="191dp"
        android:text="Shuffle and Play" />

    <Button
        android:id="@+id/PlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/RecordButton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-197dp"
        android:layout_marginTop="69dp"
        android:text="Play" />

    <Button
        android:id="@+id/RecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="248dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="47dp"
        android:text="Record" />

    <EditText
        android:id="@+id/tBet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="TBW in seconds" />

    <TextView
        android:id="@+id/tSumWords"
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/tBet"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="-21dp"
        android:layout_marginBottom="309dp"
        android:textDirection="rtl" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PlayButton"
        android:layout_alignEnd="@+id/tBet"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="125dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Word count" />
</RelativeLayout>